<div class="container game-row">
    <div class="row">
      {{#if alternativeOrientation}}
        <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
          {{t-game-content title=title description=description playLink=playLink storeLink=storeLink unreleased=unreleased youtubeLink=youtubeLink}}
        </div>

        <div class="col-lg-5 col-sm-pull-6  col-sm-6">
            <img class="img-responsive thumb" src="work/thumbs/{{nick}}.jpg" alt="">
        </div>
      {{else}}
        <div class="col-lg-5 col-sm-6">
          {{t-game-content title=title description=description playLink=playLink storeLink=storeLink unreleased=unreleased youtubeLink=youtubeLink}}
        </div>

        <div class="col-lg-5 col-lg-offset-2 col-sm-6">
            <img class="img-responsive thumb" src="work/thumbs/{{nick}}.jpg" alt="">
        </div>
      {{/if}}
    </div>

</div>
