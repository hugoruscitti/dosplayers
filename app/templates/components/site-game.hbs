{{#md-card title=title id="basic-card"}}

      {{#if released}}
        {{#md-badge class='deep-purple lighten-2 white-text'}}
          Published
        {{/md-badge}}
      {{else}}
        {{#md-badge class='grey lighten-1 white-text'}}
          In process ...
        {{/md-badge}}
      {{/if}}

    {{#md-card-content}}


      <img {{action 'showModal'}} class='w100 border' src='/work/thumbs/{{image}}'>


      <p class="center">
        {{description}}
      </p>

    {{/md-card-content}}

    <!--
    {{#md-card-action class='center'}}
        {{md-btn text='details' action='showModal' class='btn-flat indigo white-text'}}
    {{/md-card-action}}
    -->

{{/md-card}}



{{#if modalVisible}}
    {{#md-modal close='hideModal'}}
        <div class="modal-content">
            <h4>{{title}}</h4>

            {{#if youtubeID}}
              <iframe width="420" height="315" src="https://www.youtube.com/embed/{{youtubeID}}" frameborder="0"></iframe>
            {{/if}}

        </div>
        <div class="modal-footer">
            <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'hideModal'}}>
                Close
            </a>
        </div>
    {{/md-modal}}
{{/if}}
